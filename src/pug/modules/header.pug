header.header 
    ._container 
        .header__wrap
            a.header__logo.logo(href="")
                img(src="img/logo.svg" alt="лого")
            .header__content
                a.header__ya-maps(href="")
                    img(src="img/ya-maps.svg" alt="яндекс отзывы")
                .header__addr
                    span.header__addr-text.header__addr-text--first Производство кухонь на заказ
                    span.header__addr-text.header__addr-text--second Анапа, ул. Крылова, д. 27
                .header__social
                    a.header__social-icn.header__social-icn--whatsap(href="")
                        svg(width="36" height="36").icn-whatsap
                            use(xlink:href="#icn-whatsap")
                    a.header__social-icn.header__social-icn--telegram(href="")
                        svg(width="36" height="36").icn-telegram
                            use(xlink:href="#icn-telegram")
                a.header__phone(href="tel:+79883117788") +7 (988)-311-77-88
                a.btn.header__btn(href="") Заказать звонок
            .hamburger-menu
                input#menu__toggle(type='checkbox')
                label.menu__btn(for='menu__toggle')
                    span
                .menu__box

